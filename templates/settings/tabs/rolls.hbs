<form>
    <h2>
        Rolls
    </h2>
    <span>
        {{! Damage Numbers }}
        <h3>
            {{localize "pf2e-rpg-numbers.module-settings.headers.dmg-numbers"}}
        </h3>
        {{! Enabled }}
        <div class="form-group">
            <label
                for="settings.dmg-numbers.enabled"
                data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.enabled.hint"}}"
            >
                {{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.enabled.name"}}
            </label>
            <input
                type="checkbox"
                id="settings.dmg-numbers.enabled"
                name="settings.dmg-numbers.enabled"
                {{checked settings.dmg-numbers.enabled}}
            />
        </div>
        {{! When To Show }}
        <div class="form-group">
            <label
                for="settings.dmg-numbers.whenTo"
                data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.on-apply-or-roll.hint"}}"
            >
                {{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.on-apply-or-roll.name"}}
            </label>
            <select id="settings.dmg-numbers.whenTo" name="settings.dmg-numbers.whenTo">
                {{selectOptions
                    settings.dmg-numbers.whenTo.choices
                    selected=settings.dmg-numbers.whenTo.value
                    localize=true
                }}
            </select>
        </div>
        {{! Font Size }}
        <div class="form-group">
            <label
                for="settings.dmg-numbers.fontSize"
                data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.font-size.hint"}}"
            >
                {{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.font-size.name"}}
            </label>
            {{numberInput settings.dmg-numbers.fontSize.value name="settings.dmg-numbers.fontSize"}}
        </div>
        {{! Max Font Size }}
        <div class="form-group">
            <label
                for="settings.dmg-numbers.maxFontSize"
                data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.max-font-size.hint"}}"
            >
                {{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.max-font-size.name"}}
            </label>
            {{numberInput settings.dmg-numbers.maxFontSize.value name="settings.dmg-numbers.maxFontSize"}}
        </div>
        {{! Top Offset }}
        <div class="form-group">
            <label
                for="settings.dmg-numbers.topOffset"
                data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.top-offset.hint"}}"
            >
                {{localize "pf2e-rpg-numbers.module-settings.dmg-numbers.top-offset.name"}}
            </label>
            {{numberInput
                settings.dmg-numbers.topOffset.value
                name="settings.dmg-numbers.topOffset"
                step=settings.dmg-numbers.topOffset.range.step
                min=settings.dmg-numbers.topOffset.range.min
                max=settings.dmg-numbers.topOffset.range.max
            }}
        </div>
        {{! Show Total }}
