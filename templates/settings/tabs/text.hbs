<span>
    {{! Finishing Move}}
    <h4
        id="finishing-move"
        data-tooltip-direction="LEFT"
        data-tooltip="<img src='https://raw.githubusercontent.com/ChasarooniZ/pf2e-rpg-numbers/refs/heads/main/assets/feature-vids/finishing-move.gif' />"
    >
        {{localize "pf2e-rpg-numbers.module-settings.headers.finishing-move.title"}}
        <i class="fa-regular fa-message"></i>
    </h4>
    {{! Enabled }}
    <div class="form-group">
        <label
            for="settings.finishingMove.enabled"
            data-tooltip-direction="LEFT"
            data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.finishing-move.enabled.hint"}}"
        >
            {{localize "pf2e-rpg-numbers.module-settings.finishing-move.enabled.name"}}
        </label>
        <input
            type="checkbox"
            id="settings.finishingMove.enabled"
            name="settings.finishingMove.enabled"
            {{checked settings.finishingMove.enabled}}
        />
    </div>
    {{! Player Enabled }}
    <div class="form-group">
        <label
            for="settings.finishingMove.playerEnabled"
            data-tooltip-direction="LEFT"
            data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.finishing-move.enabled-players.hint"}}"
