<form>
    <nav class="tabs" data-group="primary-tabs">
        {{#each tabs}}
        <a class="item" data-tab="{{id}}"><i class="fas {{icon}}"></i> {{label}}</a>
        {{/each}}
    </nav>

    <section class="content">
        {{#each tabs as |tab|}}
        <div class="tab" data-tab="{{tab.id}}" data-group="primary-tabs">
            {{#if tab.home}}
            {{> 'modules/pf2e-rpg-numbers/templates/settings/tabs/home.hbs' this}}
            {{/if}}
            {{#if tab.rolls}}
            {{> 'modules/pf2e-rpg-numbers/templates/settings/tabs/rolls.hbs' this}}
            {{/if}}
            {{#if tab.token}}
            {{> 'modules/pf2e-rpg-numbers/templates/settings/tabs/token.hbs' this}}
            {{/if}}
            {{#if tab.critical}}
            {{> 'modules/pf2e-rpg-numbers/templates/settings/tabs/critical.hbs' this}}
            {{/if}}
            {{#if tab.text}}
            {{> 'modules/pf2e-rpg-numbers/templates/settings/tabs/text.hbs' this}}
            {{/if}}
            {{#if tab.misc}}
            {{> 'modules/pf2e-rpg-numbers/templates/settings/tabs/misc.hbs' this}}
            {{/if}}
        </div>
        {{/each}}
    </section>

    <footer>
        <button>Save</button>
        <button>Submit</button>
        <button>Cancel</button>
    </footer>
</form>

<style type="text/css">
  /* Make the nav fixed at the top */
nav.tabs {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: white;
    z-index: 1000; /* Ensure it stays on top */
    display: flex;
    justify-content: space-around;
    border-bottom: 1px solid #ccc;
}

/* Add padding to the content section to account for the fixed nav */
section.content {
    margin-top: 60px; /* Adjust based on the height of your nav */
}

/* Make the footer fixed at the bottom */
footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: white;
    z-index: 1000; /* Ensure it stays on top */
    display: flex;
    justify-content: space-between; /* Spread the buttons out */
    padding: 10px;
    border-top: 1px solid #ccc;
}

/* Ensure buttons take up 1/3 of the footer width */
footer button {
    flex: 1;
    margin: 0 5px;
    text-align: center;
}

</style>