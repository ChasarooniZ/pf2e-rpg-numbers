<form>
    <nav class="tabs pf2e-rpg-actor-config-form" data-group="primary-tabs">
        {{#each tabs}}
        <a class="item" data-tab="{{id}}"><i class="fas {{icon}}"></i> {{label}}</a>
        {{/each}}
    </nav>

    <section class="content pf2e-rpg-actor-config-form form">
        {{#each tabs as |tab|}}
        <div class="tab" data-tab="{{tab.id}}" data-group="primary-tabs">
            <!-- {{#if tab.home}} -->
            <!-- {{> 'modules/pf2e-rpg-numbers/templates/actor-settings/tabs/home.hbs' tab}} -->
            <!-- {{/if}} -->
            {{#if tab.critical}}
            {{> 'modules/pf2e-rpg-numbers/templates/actor-settings/tabs/critical/critical.hbs' tab}}
            {{/if}}
            {{#if tab.token}}
            {{> 'modules/pf2e-rpg-numbers/templates/actor-settings/tabs/token.hbs' this}}
            {{/if}}
        </div>
        {{/each}}
    </section>

    <footer class="pf2e-rpg-actor-config-form">
        <button id="pf2e-rpg-save-actor">{{localize "pf2e-rpg-numbers.menu.settings.buttons.footer.save"}}</button>
        <button id="pf2e-rpg-submit-actor">{{localize "pf2e-rpg-numbers.menu.settings.buttons.footer.submit"}}</button>
        <button id="pf2e-rpg-cancel-actor">{{localize "pf2e-rpg-numbers.menu.settings.buttons.footer.cancel"}}</button>
    </footer>
</form>

<style type="text/css">
  /* Make the nav fixed at the top */
nav.tabs.pf2e-rpg-actor-config-form {
    position: sticky;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    z-index: 1000; /* Ensure it stays on top */
    display: flex;
    justify-content: space-around;
}

/* Add padding to the content section to account for the fixed nav */
section.content.pf2e-rpg-actor-config-form {
    margin-top: 10px; /* Adjust based on the height of your nav */
    padding-bottom: 40px;
}

/* Make the footer fixed at the bottom */
footer.pf2e-rpg-actor-config-form {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1000; /* Ensure it stays on top */
    display: flex;
    justify-content: space-between; /* Spread the buttons out */
    padding: 10px;
    background: #000000bf;
}

/* Ensure buttons take up 1/3 of the footer width */
footer.pf2e-rpg-actor-config-form button {
    flex: 1;
    margin: 0 5px;
    text-align: center;
    height: 30px;
}

.row {
  display: flex;
  justify-content: space-between;
}

.column {
    flex: 0 0 48%; /* Adjust the percentage to control column width */
}

.column.crit-test {
    flex: 0 0 20%;
}


.column.success {
    background-image: linear-gradient(to right, rgb(107 255 0 / 10%), rgb(107 255 0 / 10%), #ffff0000);
}
.column.failure {
    background-image: linear-gradient(to left, rgb(255 0 0 / 10%), rgb(255 0 0 / 10%), #ffff0000)
}

.separator {
  width: 1px;
  background-color: var(--color-text-trait); /* Adjust color as needed */
  margin: 0 10px; /* Adjust spacing as needed */
}

nav.tabs.pf2e-rpg-actor-config-form:before {
    content: '';
    position: absolute;
    width: 100%;
    height: 150%;
    background: #000000bf;
    z-index: -1;
}

</style>