<h2 data-tooltip="">
    {{localize "pf2e-rpg-numbers.module-settings.headers.critical"}}
</h2>
{{! Enabled }}
<div class="form-group">
    <label
        for="settings.critical.enabled"
        data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.critical.enabled.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.module-settings.critical.enabled.name"}}
    </label>
    <input
        type="checkbox"
        id="settings.critical.enabled"
        name="settings.critical.enabled"
        {{checked settings.critical.enabled}}
    />
</div>
{{! Style }}
<div class="form-group">
    <label
        for="settings.critical.style"
        data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.critical.type.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.module-settings.critical.type.name"}}
    </label>
    <select id="settings.critical.style" name="settings.critical.style">
        {{selectOptions settings.critical.style.choices selected=settings.critical.style.value localize=true}}
    </select>
</div>
{{! Sound Effect }}
<div class="form-group">
    <label
        for="settings.critical.sound"
        data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.critical.sound.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.module-settings.critical.sound.name"}}
    </label>
    <input
        type="text"
        id="settings.critical.sound"
        name="settings.critical.sound"
        value="{{settings.critical.sound}}"
    />
    {{filePicker target="settings.critical.sound" type="audio"}}
</div>
{{! Volume }}
<div class="form-group">
    <label
        for="settings.critical.volume"
        data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.critical.volume.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.module-settings.critical.volume.name"}}
    </label>
    {{numberInput settings.critical.volume.value name="settings.critical.volume" step=1 min=0 max=100}}
</div>
{{! Delay }}
<div class="form-group">
    <label
        for="settings.critical.delay"
        data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.critical.delay.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.module-settings.critical.delay.name"}}
    </label>
    {{numberInput settings.critical.delay name="settings.critical.delay"}}
</div>
