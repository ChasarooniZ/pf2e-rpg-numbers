<h3 data-tooltip="">
    {{#if base}}
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.headers.base"}}
        <i class="fa-solid fa-explosion"></i>
    {{/if}}
    {{#if strike}}
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.headers.strike"}}
        <i class="fa-solid fa-sword"></i>
    {{/if}}
    {{#if check}}
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.headers.check"}}
        <i class="fa-solid fa-hand"></i>
    {{/if}}
    {{#if save}}
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.headers.save"}}
        <i class="fa-solid fa-heart-pulse"></i>
    {{/if}}
</h3>

{{! Enabled }}
<div class="form-group">
    <label
        for="settings.critical.{{section}}.enabled"
        data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.enabled.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.enabled.name"}}
    </label>
    <select name="settings.critical.{{section}}.enabled">
        {{selectOptions settings.choices.enabled select="default"}}
    </select>
</div>

{{! Type }}
<div class="form-group">
    <label
        for="settings.critical.{{section}}.type"
        data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.type.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.type.name"}}
    </label>
    <select name="settings.critical.{{section}}.type">
        {{selectOptions settings.choices.type select="default"}}
    </select>
</div>

{{! Art }}
<div class="form-group">
    <label
        for="settings.critical.{{section}}.art"
        data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.art.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.art.name"}}
    </label>
    <input
        type="text"
        id="settings.critical.{{section}}.art"
        name="settings.critical.{{section}}.art"
        value="{{settings.critical.sound}}"
    />
    {{filePicker target="settings.critical.{{section}}.art" type="image"}}
</div>

{{! Enabled }}
<div class="form-group">
    <label
        for="settings.critical.enabled"
        data-tooltip="{{localize "pf2e-rpg-numbers.module-settings.critical.enabled.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.module-settings.critical.enabled.name"}}
    </label>
    <input
        type="checkbox"
        id="settings.critical.enabled"
        name="settings.critical.enabled"
        {{checked settings.critical.enabled}}
    />
</div>
{{! Sound Effect }}
