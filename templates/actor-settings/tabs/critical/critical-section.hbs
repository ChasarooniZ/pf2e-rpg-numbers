<h3>
    <div class="row">
        <div class="column" data-tooltip="">
            {{#if default}}
                {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.headers.default"}}
                <i class="fa-solid fa-explosion"></i>
            {{/if}}
            {{#if strikes}}
                {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.headers.strikes"}}
                <i class="fa-solid fa-sword"></i>
            {{/if}}
            {{#if checks}}
                {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.headers.checks"}}
                <i class="fa-solid fa-hand"></i>
            {{/if}}
            {{#if saves}}
                {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.headers.saves"}}
                <i class="fa-solid fa-heart-pulse"></i>
            {{/if}}
        </div>
        <div
            class="column crit-test"
            data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.tooltip.test"}}"
        >
            <button id="critical-test-{{type}}-{{section}}" data-type="{{type}}" data-section="{{section}}">
                <i class="fa-solid fa-vial"></i>
                {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.buttons.test"}}
            </button>
        </div>
    </div>
</h3>

{{! Enabled }}
<div class="form-group">
    <label
        for="settings.critical.{{type}}.{{section}}.enabled"
        data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.enabled.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.enabled.name"}}
    </label>
    <select name="settings.critical.{{type}}.{{section}}.enabled">
        {{selectOptions settings.choices.enabled selected=data.enabled}}
    </select>
</div>

{{! Type }}
<div class="form-group">
    <label
        for="settings.critical.{{type}}.{{section}}.type"
        data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.type.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.type.name"}}
    </label>
    <select name="settings.critical.{{type}}.{{section}}.type">
        {{selectOptions settings.choices.type selected=data.type}}
    </select>
</div>

{{! Art }}
<div class="form-group">
    <label
        for="settings.critical.{{type}}.{{section}}.art"
        data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.art.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.art.name"}}
    </label>
    <input
        type="text"
        id="settings.critical.{{type}}.{{section}}.art"
        name="settings.critical.{{type}}.{{section}}.art"
        value="{{data.art}}"
    />
    <button
        type="button"
        class="file-picker"
        data-type="imagevideo"
        data-target="settings.critical.{{type}}.{{section}}.art"
        title="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.art.name"}}"
        tabindex="-1"
    >
        <i class="fas fa-file-import fa-fw"></i>
    </button>
</div>
