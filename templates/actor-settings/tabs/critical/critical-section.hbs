{{! Offset}}
<div class="row">
    <div class="column">
        <div class="form-group">
            <label
                for="settings.critical.{{type}}.{{section}}.offset.x"
                data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.offset-x.hint"}}"
            >
                {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.offset-x.name"}}
            </label>
            {{numberInput
                data.offset.x
                name=(concat "settings.critical." type "." section ".offset.x")
                step=1
                min=-100
                max=100
            }}
        </div>
    </div>
    <div class="column">
        <div class="form-group">
            <label
                for="settings.critical.{{type}}.{{section}}.offset.y"
                data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.offset-y.hint"}}"
            >
                {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.offset-y.name"}}
            </label>
            {{numberInput
                data.offset.y
                name=(concat "settings.critical." type "." section ".offset.y")
                step=1
                min=-100
                max=100
            }}
        </div>
    </div>
</div>

{{! Rotation }}
<div class="form-group">
    <label
        for="settings.critical.{{type}}.{{section}}.rotation"
        data-tooltip="{{localize "pf2e-rpg-numbers.menu.actor-settings.critical.rotation.hint"}}"
    >
        {{localize "pf2e-rpg-numbers.menu.actor-settings.critical.rotation.name"}}
    </label>
    <range-picker
        name="settings.critical.{{type}}.{{section}}.rotation"
        value="{{data.rotation}}"
        min="0"
        max="360"
        step="1"
    ></range-picker>
</div>

<div class="row">
    <div class="column">
        {{! Scale }}
